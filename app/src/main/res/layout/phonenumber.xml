<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/mob"/>

        <gereh.pira.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/md_white_1000"
            android:text="شماره موبایل خود را وارد کنید:"
            android:layout_gravity="center_horizontal"/>

        <EditText
            android:layout_width="230dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/phone_number_shape"
            android:id="@+id/edt_number"
            android:inputType="number"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="@color/md_white_1000"
            android:textSize="20sp"
            android:text="ادامه"
            android:gravity="center"
            android:id="@+id/btn_continue"
            android:background="@drawable/phone_btn_shape"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/md_white_1000"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:text="ورود آرایشگر"
            android:gravity="center"
            android:id="@+id/enter_barber"
            android:background="@drawable/phone_btn_shape"/>

        </LinearLayout>

</LinearLayout>